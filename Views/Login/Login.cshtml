@model MvcApp.Models.User

@{
  ViewData["Title"] = "Login Form";
}

<form asp-action="Login">
  <div class="form-group">
    <label asp-for="Username" for="inputUsername"></label>
    <input asp-for="Username" class="form-control" id="inputUsername" placeholder="Enter username here">
  </div>
  <div class="form-group">
    <label asp-for="Password" for="inputPassword">Password</label>
    <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Enter password here">
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>